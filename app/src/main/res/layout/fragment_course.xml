<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CourseFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/course_circle"
                android:id="@+id/coursethumbnail"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Title"
                android:fontFamily="@font/comfortaa"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"/>




            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/txtDesc"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course description"/>


            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/txtDetails"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course otherDetails"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Requirements: "/>
                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/txtRequirements"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course requirement"/>
            </LinearLayout>

            <TextView
                android:id="@+id/enroll_now"
                android:layout_width="wrap_content"
                android:text="Enroll Now"
                android:fontFamily="@font/comfortaa"
                android:paddingHorizontal="40dp"
                android:paddingVertical="10dp"
                android:textAllCaps="false"
                android:textColor="#0088dd"
                android:layout_marginVertical="20dp"
                android:background="@drawable/rounded_button_grey"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>