<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <LinearLayout
                    android:id="@+id/user_settings"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/ic_account_circle_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />
                </LinearLayout>

                <TextView
                    android:id="@+id/user_setting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_settings"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="Jean Bosco Mengue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_setting_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_setting_name"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/comfortaa"
                    android:text="jnrmengue@gmail.com"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_setting_matricule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_setting_email"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/comfortaa"
                    android:text="FE15A093"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:drawable/divider_horizontal_bright" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/modify_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/pass_modify_label"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/comfortaa"
                    android:layout_height="wrap_content"
                    android:text="Change password" />

                <EditText
                    android:id="@+id/oldpassword"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/pass_modify_label"
                    android:background="@drawable/edit_rounded"
                    android:drawableLeft="@drawable/ic_lock_grey_24dp"
                    android:hint="Enter old password"
                    android:fontFamily="@font/comfortaa"
                    android:drawablePadding="10dp"
                    android:layout_marginVertical="10dp"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:inputType="textPassword"
                     />

                <EditText
                    android:id="@+id/newpassword"
                    android:layout_width="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="40dp"
                    android:layout_below="@id/oldpassword"
                    android:background="@drawable/edit_rounded"
                    android:drawableLeft="@drawable/ic_lock_grey_24dp"
                    android:hint="Enter new password"
                    android:textSize="13sp"
                    android:fontFamily="@font/comfortaa"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    />

                <Button
                    android:id="@+id/changePassButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newpassword"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_button"
                    android:paddingHorizontal="40dp"
                    android:textSize="13sp"
                    android:paddingVertical="5dp"
                    android:text="Submit"
                    android:fontFamily="@font/comfortaa"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>